@model Product

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/MeetUpCenter.styles.css" asp-append-version="true" />
    </head>
    <body>
        <h1>Add a Product</h1>
        <form asp-controller="Admin" asp-action="CreateProduct" method="POST">
            <div>
                <label asp-for="Name" class="form-label"></label>
                <span asp-validation-for="Name" style="color: red; font-weight: bold;"></span>
                <input asp-for="Name" class="form-control">
            </div>
            <div>
                <label asp-for="Price" class="form-label"></label>
                <span asp-validation-for="Price" style="color: red; font-weight: bold;"></span>
                <input asp-for="Price" class="form-control">
            </div>
            <div>
                <label asp-for="Description" class="form-label"></label>
                <span asp-validation-for="Description" style="color: red; font-weight: bold;"></span>
                <textarea asp-for="Description" rows="5" cols="25" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-outline-primary">Add Product</button>
        </form>
    </body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</html>