@model Admin

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/MeetUpCenter.styles.css" asp-append-version="true" />
    </head>
    <body>
        <form asp-controller="User" asp-action="Register" method="POST">
            <h1>Register</h1>
            <div>
                <label asp-for="FirstName" class="form-label"></label>
                <span asp-validation-for="FirstName" style="color: red; font-weight: bold;"></span>
                <input asp-for="FirstName" class="form-control">
            </div>
            <div>
                <label asp-for="LastName" class="form-label"></label>
                <span asp-validation-for="LastName" style="color: red; font-weight: bold;"></span>
                <input asp-for="LastName" class="form-control">
            </div>
            <div>
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" style="color: red; font-weight: bold;"></span>
                <input asp-for="Email" class="form-control">
            </div>
            <div>
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" style="color: red; font-weight: bold;"></span>
                <input asp-for="Password" class="form-control">
            </div>
            <div>
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="ConfirmPassword" style="color: red; font-weight: bold;"></span>
                <input asp-for="ConfirmPassword" class="form-control">
            </div>
            <button type="submit" class="btn btn-outline-primary">Register</button>
        </form>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>