@model NewBusinessForm

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>MyCRM - Add a Client</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/MeetUpCenter.styles.css" asp-append-version="true" />
    </head>
    <body>
        <div style="display: flex; align-items: center; justify-content: space-between;">
            <h1>Add a New Client</h1>
            <div style="display: flex; align-items: center;">
                <a asp-controller="CRM" asp-action="Dashboard" class="btn btn-outline-primary">Dashboard</a>
                <a asp-controller="User" asp-action="Logout" class="btn btn-outline-danger">Log Out</a>
            </div>
        </div>

        <form asp-controller="CRM" asp-action="CreateBusiness" method="POST">
            <div>
                <label asp-for="BusinessName" class="form-label"></label>
                <span asp-validation-for="BusinessName" style="color: red; font-weight: bold;"></span>
                <input asp-for="BusinessName" class="form-control">
            </div>
            <div>
                <label asp-for="BusinessOwner" class="form-label"></label>
                <span asp-validation-for="BusinessOwner" style="color: red; font-weight: bold;"></span>
                <input asp-for="BusinessOwner" class="form-control">
            </div>
            <div>
                <label asp-for="StartDate" class="form-label"></label>
                <span asp-validation-for="StartDate" style="color: red; font-weight: bold;"></span>
                <input type="date" asp-for="StartDate" class="form-control">
            </div>
            <div>
                <label asp-for="Industry" class="form-label">Industry</label>
                <span asp-validation-for="Industry" style="color: red; font-weight: bold;"></span>
                <select asp-for="Industry" class="form-control">
                    <option value="Automotive">Automotive</option>
                    <option value="Health Care">Health Care</option>
                    <option value="Legal">Legal</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Sports">Sports</option>
                    <option value="Restaurant">Restaurant</option>
                </select>
            </div>
            <div>
                <label asp-for="Street" class="form-label"></label>
                <span asp-validation-for="Street" style="color: red; font-weight: bold;"></span>
                <input asp-for="Street" class="form-control">
            </div>
            <div>
                <label asp-for="City" class="form-label"></label>
                <span asp-validation-for="City" style="color: red; font-weight: bold;"></span>
                <select asp-for="City" class="form-control">

                </select>
            </div>
            <div>
                <label asp-for="ZipCode" class="form-label"></label>
                <span asp-validation-for="ZipCode" style="color: red; font-weight: bold;"></span>
                <input asp-for="ZipCode" class="form-control">
            </div>
            <button type="submit" class="btn btn-outline-success">Add Business</button>
        </form>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>