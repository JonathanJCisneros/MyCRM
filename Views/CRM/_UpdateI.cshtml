@model Business

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="~/css/CRM/_UpdateI.css"/>
    </head>
    <body>
        <form asp-controller="CRM" asp-action="UpdateBusinessIndustry" asp-route-businessId="@ViewBag.OneBusiness.BusinessId" method="POST">
            <div style="display: flex;">
                <span asp-validation-for="Industry" style="color: red; font-weight: bold;"></span>
                <select asp-for="Industry" class="form-control" id="Iinput">
                    <option value="@ViewBag.OneBusiness.Industry" selected>@ViewBag.OneBusiness.Industry</option>
                    <option value="Automotive">Automotive</option>
                    <option value="Health Care">Health Care</option>
                    <option value="Legal">Legal</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Sports">Sports</option>
                    <option value="Restaurant">Restaurant</option>
                </select>
                <button type="submit" class="btn btn-link">Update</button>
            </div>
        </form>
    </body>
</html>