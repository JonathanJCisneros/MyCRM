

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>MyCRM - @ViewBag.OneBusiness.BusinessName</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/CRM/ViewOne.css" />
    </head>
    <body>
        <div class="ViewOneBody">
            <div class="ViewOneHeader">
                <div>
                    <h1 class="bname">
                        <span onmouseover="editName(this)" onmouseout="removeName(this)" id="BN">
                            @ViewBag.OneBusiness.BusinessName
                            <button class="btn btn-link" id="editor" onclick="switchName('BN','BNUpdate')">edit</button>
                        </span>
                        <span id="BNUpdate" onmouseout="BNBack(this)"><partial name="_UpdateBName"></partial></span>
                    </h1>
                </div>
                <div class="HRight">
                    <a asp-controller="CRM" asp-action="Presentation"  asp-route-businessId="@ViewBag.oneBusiness.BusinessId" class="btn btn-outline-success">Presentation</a>
                    <span></span>
                    <a asp-controller="CRM" asp-action="Dashboard" class="btn btn-outline-primary">Dashboard</a>
                    <span></span>
                    <a asp-controller="User" asp-action="Logout" class="btn btn-outline-danger">Log Out</a>
                </div>
            </div>
            <div class="ViewOneContainer">
                <div class="ContainerLeft">
                    <div>
                        <h1>@ViewBag.OneBusiness.StaffList[0].StaffType: @ViewBag.OneBusiness.StaffList[0].FirstName @ViewBag.OneBusiness.StaffList[0].LastName</h1>
                    </div>
                    <div>
                        <h3>Phone: <a href="tel:@ViewBag.OneBusiness.StaffList[0].PhoneNumber">@ViewBag.OneBusiness.StaffList[0].PhoneNumber</a></h3>
                    </div>
                    <div>
                        <h3>Email: <a href="mailto:@ViewBag.OneBusiness.StaffList[0].Email">@ViewBag.OneBusiness.StaffList[0].Email</a></h3>
                    </div>
                    <div>
                        <div class="StaffS">
                            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample" >
                                <span onmouseover="addS(this)" onmouseout="removeS(this)">Staff</span>
                            </button>
                            <button class="btn btn-link" id="addS" onclick="newS()">add</button>
                            <div id="newStaff">
                                <div class="close">
                                    <button class="btn-close" aria-label="Close" onclick="close()"></button>
                                </div>
                                <partial name="_NewStaff"></partial>
                            </div>
                        </div>
                        <div class="collapse" id="collapseExample">
                            <div class="card card-body">
                                <div class="cardInfo">
                                    @foreach (Staff s in ViewBag.oneBusiness.StaffList)
                                    {   
                                        <div class="staffDetails">
                                            <p>@s.StaffType</p>
                                            <p>@s.FirstName @s.LastName</p>
                                            <p><a href="tel:@s.PhoneNumber">@s.PhoneNumber</a></p>
                                            <p><a href="mailto:@s.Email">@s.Email</a></p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <h3 class="BW" >Business Website: 
                            @if(ViewBag.oneBusiness.Website == null)
                            {
                                <span id="W" onmouseover="editW(this)" onmouseout="removeW(this)">
                                    None Yet
                                    <button id="editW" class="btn btn-link" onclick="switchName('W', 'WUpdate')">edit</button>
                                </span>
                            }
                            else
                            {
                                <span id="W" onmouseover="editW(this)" onmouseout="removeW(this)">
                                    <a href="https://@ViewBag.oneBusiness.Website" target="_blank">@ViewBag.oneBusiness.Website</a>
                                    <button id="editW" class="btn btn-link" onclick="switchName('W', 'WUpdate')">edit</button>
                                </span>
                            }
                            <span id="WUpdate" onmouseout="WBack(this)"><partial name="_Website"></partial></span>
                        </h3>
                    </div>
                    <div>
                        <h2>Founded in: 
                            <span id="SD" onmouseover="editSD(this)" onmouseout="removeSD(this)">
                                @ViewBag.OneBusiness.StartDate.ToString("MMMM d, yyyy")
                                <button class="btn btn-link" id="editSD" onclick="switchName('SD','USD')">edit</button>
                            </span>
                            <span id="USD" onmouseout="SDBack(this)"><partial name="_UpdateSD"></partial></span>
                        </h2>
                    </div>
                    <div>
                        <h2 class="industryT">Industry: 
                            <span id="I" onmouseover="editI(this)" onmouseout="removeI(this)">
                                @ViewBag.OneBusiness.Industry
                                <button class="btn btn-link" id="editI" onclick="switchName('I','UI')">edit</button>
                            </span>
                            <span id="UI" onmouseout="IBack(this)"><partial name="_UpdateI"></partial></span>
                        </h2>
                    </div>
                    <div class="lnbody">
                        <div style="margin-left: 50px;">
                            <div>
                                <h1 class="address" onmouseover="addA(this)" onmouseout="removeA(this)">
                                    Locations 
                                    <span><button class="btn btn-link" id="addA" onclick="address()">add</button></span>
                                </h1>
                            </div>
                            <div id="newAddress">
                                <div class="close">
                                    <button class="btn-close" aria-label="Close" onclick="close('newAddress')"></button>
                                </div>
                                    <partial name="_Address"></partial>
                            </div>
                            <div style="margin-left: 20px;">
                                @foreach (Address a in ViewBag.OneBusiness.AddressList)
                                {
                                    <div class="locationDetails" onmouseover="addAD(this)" onmouseout="removeAD(this)">
                                        <div>
                                            <h4 id="ViewOneStreet">@a.Street</h4>
                                            <h4>@a.City, @a.State @a.ZipCode</h4>
                                        </div>
                                        <span id="aOptions">
                                                <a asp-controller="CRM" asp-action="DeleteLocation" asp-route-businessId="@ViewBag.OneBusiness.BusinessId" asp-route-addressId="@a.AddressId">delete</a>
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                        <div style="margin-left: 50px;">
                            <div>
                                <h1 class="notes" onmouseover="editN(this)" onmouseout="removeN(this)">
                                    Notes 
                                    <span><button class="btn btn-link" id="editN" onclick="notes()">add</button></span>
                                </h1>
                            </div>
                            <div style="display: flex;">
                                <div class="noteDetails">
                                    @foreach (Note n in ViewBag.OneBusiness.SpecialNotes)
                                    {
                                        <div class="note">
                                            <h5 style="margin: 0px; font-weight: bold;">@n.SpecialNote</h5>
                                            <p>@n.CreatedAt.ToString("M/d @ h:mm tt")</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <span id="SNotes">
                            <div class="close">
                                <button class="btn-close" aria-label="Close" onclick="close('SNotes')"></button>
                            </div>
                            <partial name="_SpecialNotes"></partial>
                        </span>
                    </div>
                    <div class="purchases">
                        <p>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample1" aria-expanded="false" aria-controls="collapseWidthExample1">
                                Purchases
                            </button>
                        </p>
                        <div style="min-height: 120px;">
                            <div class="collapse collapse" id="collapseWidthExample1">
                                <div class="card card-body" style="width: 300px;">
                                    @foreach (Purchase p in ViewBag.OneBusiness.PurchaseList)
                                    {
                                        <p>@p.Product.Name at @p.Address.City, @p.Address.State Location </p>
                                    }
                                </div>
                            </div>
                        </div>                      
                    </div>
                </div>
                <div class="ContainerRight">
                    <partial name="_ClientActivity"></partial>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
        <script src="~/js/ViewOne.js"></script>
    </body>
</html>