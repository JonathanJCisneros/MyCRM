                }
                @if(ViewBag.oneBusiness.Industry == "Restaurant")
                {
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/keOaQm6RpBg" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
