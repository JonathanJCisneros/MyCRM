            </div>
            <div class="Section Video">
                @if(ViewBag.oneBusiness.Industry == "Automotive")
                {
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/_T8jKHR4nlw" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
