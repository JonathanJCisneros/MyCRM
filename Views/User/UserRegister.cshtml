@model User

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>MyCRM</title>
        <link rel="stylesheet" href="~/css/User/UserRegister.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/MeetUpCenter.styles.css" asp-append-version="true" />
    </head>
    <body>
        <div class="header">
            <h1 class="userRegisterTitle">MyCRM</h1>
        </div>
        <div class="contain">
            <form asp-controller="User" asp-action="Register" method="POST" class="registerForm">
                <h1 class="registerTitle">Register</h1>
                <div class="row">
                    <div class="col">
                        <label asp-for="FirstName" class="form-label"></label>
                        <span asp-validation-for="FirstName" class="error"></span>
                        <input asp-for="FirstName" class="form-control">
                    </div>
                    <div class="col">
                        <label asp-for="LastName" class="form-label"></label>
                        <span asp-validation-for="LastName" class="error"></span>
                        <input asp-for="LastName" class="form-control">
                    </div>
                </div>
                <div>
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="error"></span>
                    <input asp-for="Email" class="form-control" id="inputEmail">
                </div>
                <div>
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="error"></span>
                    <input asp-for="Password" class="form-control" id="inputPassword">
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <span asp-validation-for="ConfirmPassword" class="error"></span>
                    <input asp-for="ConfirmPassword" class="form-control" id="inputPW">
                </div>
                <div class="submit">
                    <button type="submit" class="btn btn-outline-primary">Register</button>
                </div>
            </form>
            <div class="LoginL">
                <a asp-controller="User" asp-action="Home" >Already have an account? Sign In!</a>
            </div>
        </div>
        
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>
