@model UserLogin

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/User/_Login.css"/>
        <link rel="stylesheet" href="~/MeetUpCenter.styles.css" asp-append-version="true" />
    </head>
    <body>
        <form asp-controller="User" asp-action="Login" method="POST">
            <h1>Login</h1>
            <div>
                <label asp-for="LoginEmail" class="form-label"></label>
                <span asp-validation-for="LoginEmail" style="color: red; font-weight: bold;"></span>
                <input asp-for="LoginEmail" class="form-control">
            </div>
            <div>
                <label asp-for="LoginPassword" class="form-label"></label>
                <span asp-validation-for="LoginPassword" style="color: red; font-weight: bold;"></span>
                <input asp-for="LoginPassword" class="form-control">
            </div>
            <br>
            <button type="submit" class="btn btn-outline-primary">Log In</button>
        </form>
    </body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</html>
